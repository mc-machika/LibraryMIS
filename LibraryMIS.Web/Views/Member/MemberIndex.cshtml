@using LibraryMIS.FrontEnd.Web.Models;
@using LibraryMIS.Web.Models.Dto;
@model IEnumerable<MemberDto>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white">Members List</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a class="btn btn-outline-primary" asp-action="MemberCreate"><i class="bi bi-plus-square"></i> Add a Member</a>

			</div>
		</div>
		<table class="table table-bordered" id="memberList">
			<thead>
				<tr>
					<th>
						MEMBER ID
					</th>
					<th>
						NAME
					</th>
					<th>
						EMAIL
					</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@item.MemberId
						</td>
						<td>
							@item.FirstName @item.LastName
						</td>
						<td>
							@item.Email
						</td>
						<td>
							<a asp-action="MemberEdit" asp-route-memberId="@item.Id" class="">
								<i class="bi bi-pencil-square"></i>
							</a>

							<a asp-action="MemberDelete" asp-route-memberId="@item.Id" class="">
								<i class="bi bi-trash"></i>
							</a>

							<a asp-action="MemberDetails" asp-route-memberId="@item.Id" class="">
								<i class="bi bi-eye"></i>
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>

</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>@*
